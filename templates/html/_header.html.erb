      <td width="80%"><%= patient.id %> 2.16.840.1.113883.3.72</td>
    </tr>
    <tr>
      <td width="20%" bgcolor="#3399ff"><span class="td_label">Document Created:</span></td>
      <td width="80%"><%= Time.now.utc.to_formatted_s(:long_ordinal)%></td>
    </tr>
  </tbody>
</table>
